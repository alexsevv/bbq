<%= simple_form_for(@event) do |f| %>
    <%= f.input :title %>
    <%= f.input :address %>
    <%= f.datetime_select :datetime %>
    <%= f.input :description, as: :text %>
    <%= f.input :pincode %>
    <%= f.button :submit, 'Сохранить', class: 'btn btn-primary' %>
    или <%= link_to 'вернуться', :back %>
<% end %>
