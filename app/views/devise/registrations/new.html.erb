<h2>Регистрация</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="row">
    <div class="col-md-6 buffer-top">
      <div class="form-group">
        <%= f.label :email, class: 'label-control' %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: 'label-control' %>
        <% if @minimum_password_length %>
          <em>(минимум <%= @minimum_password_length %> символов)</em>
        <% end %><br>
        <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, class: 'label-control' %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'  %>
      </div>

      <div class="actions">
        <%= f.submit "Зарегистрироваться", class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>

<div class="buffer-both">
  <%= render "devise/shared/links" %>
</div>
