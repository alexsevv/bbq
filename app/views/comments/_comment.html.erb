<div class="buffer-bottom bg-info padding-left-right border_radius">
  <p><%= comment.body %></p>
  <p>
    <span>
      <% if comment.user.present? %>
        <%= render partial: 'users/user', object: comment.user %>
      <% else %>
        <em><strong><%= comment.user_name %></strong></em>
      <% end %>
    </span>
    <em class="comment-date"><%= l comment.created_at, format: :long %></em>
    <% if current_user_can_edit?(comment) %>
      <%= link_to(
        fa_icon('trash'), event_comment_path(comment.event, comment),
        method: :delete, data: {confirm: t('.destroy_confirm')}
      ) %>
    <% end %>
  </p>
</div>
